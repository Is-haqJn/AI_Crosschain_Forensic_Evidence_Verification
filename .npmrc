# NPM Configuration for Forensic Evidence System Monorepo
# Enable workspaces
workspaces=true

# Package manager settings
package-lock=true
save-exact=false

# Registry settings
registry=https://registry.npmjs.org/

# Security settings
audit-level=moderate
fund=false

# Cache settings
cache-max=86400000
cache-min=3600000

# Logging
loglevel=warn
progress=true

# Workspace settings
workspace-concurrency=4
workspace-prefix=true

# Docker and Kubernetes compatibility
engine-strict=true
