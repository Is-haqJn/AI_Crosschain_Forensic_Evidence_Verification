{
  "name": "evidence-service",
  "version": "1.0.0",
  "description": "Forensic Evidence Management Microservice",
  "main": "dist/index.js",
  "type": "module",
  "engines": {
    "node": ">=22.0.0",
    "npm": ">=10.0.0"
  },
  "scripts": {
    "start": "node --max-old-space-size=2048 dist/index.js",
    "start:prod": "NODE_ENV=production node --max-old-space-size=2048 dist/index.js",
    "dev": "nodemon --exec \"node --max-old-space-size=2048 --import ./loader.js\" src/index.ts",
    "build": "tsc && npm run build:copy-assets",
    "build:copy-assets": "node -e \"const fs=require('fs'); const path=require('path'); const src='src/assets'; const dest='dist/assets'; if(fs.existsSync(src)) { fs.cpSync(src, dest, {recursive: true, force: true}); console.log('Assets copied successfully'); } else { console.log('No assets directory found, skipping copy'); }\"",
    "build:docker": "npm run build && npm prune --production",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "type-check": "tsc --noEmit",
    "health-check": "node dist/health-check.js",
    "seed-admin": "npm run build && node dist/scripts/seed-admin.js",
    "migrate": "prisma migrate deploy",
    "migrate:dev": "prisma migrate dev",
    "migrate:reset": "prisma migrate reset",
    "db:seed": "ts-node prisma/seed.ts",
    "docker:build": "docker build -t evidence-service .",
    "docker:run": "docker run -p 3001:3001 evidence-service",
    "k8s:deploy": "kubectl apply -f k8s/",
    "k8s:delete": "kubectl delete -f k8s/",
    "k8s:logs": "kubectl logs -f deployment/evidence-service",
    "k8s:status": "kubectl get pods -l app=evidence-service"
  },
  "dependencies": {
    "@helia/json": "^4.0.4",
    "@helia/strings": "^4.1.0",
    "@helia/unixfs": "^5.1.0",
    "@prisma/client": "^5.7.1",
    "amqplib": "^0.10.3",
    "axios": "^1.8.2",
    "bcrypt": "^5.1.1",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "crypto-js": "^4.2.0",
    "dotenv": "^16.4.5",
    "ethers": "^6.8.1",
    "express": "^4.19.2",
    "express-rate-limit": "^7.4.1",
    "form-data": "^4.0.0",
    "helia": "^4.2.6",
    "helmet": "^7.1.0",
    "ioredis": "^5.4.1",
    "joi": "^17.13.3",
    "jsonwebtoken": "^9.0.2",
    "mime-types": "^2.1.35",
    "mongoose": "^8.0.3",
    "multer": "^1.4.5-lts.1",
    "multiformats": "^13.4.0",
    "pg": "^8.11.3",
    "prisma": "^5.7.1",
    "redis": "^4.6.12",
    "sharp": "^0.33.2",
    "uuid": "^9.0.1",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/amqplib": "^0.10.4",
    "@types/bcrypt": "^5.0.2",
    "@types/compression": "^1.7.5",
    "@types/cookie-parser": "^1.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.8",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/mime-types": "^2.1.4",
    "@types/multer": "^1.4.12",
    "@types/node": "^20.19.17",
    "@types/pg": "^8.11.10",
    "@types/supertest": "^6.0.2",
    "@types/uuid": "^9.0.7",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "supertest": "^6.3.4",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "keywords": [
    "forensic",
    "evidence",
    "blockchain",
    "microservice",
    "docker",
    "kubernetes",
    "typescript",
    "express",
    "ipfs",
    "helia",
    "distributed-storage"
  ],
  "author": "Forensic Evidence System Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/forensic-evidence-system.git",
    "directory": "microservices/evidence-service"
  },
  "bugs": {
    "url": "https://github.com/your-org/forensic-evidence-system/issues"
  },
  "homepage": "https://github.com/your-org/forensic-evidence-system#readme",
  "os": [
    "linux",
    "darwin",
    "win32"
  ],
  "cpu": [
    "x64",
    "arm64"
  ],
  "config": {
    "port": 3001,
    "health_check_interval": 30000,
    "graceful_shutdown_timeout": 10000,
    "ipfs": {
      "helia_enabled": true,
      "gateway_url": "https://ipfs.io/ipfs/",
      "pinning_enabled": true
    }
  },
  "docker": {
    "base_image": "node:22-alpine",
    "expose_port": 3001,
    "health_check": {
      "test": [
        "CMD",
        "npm",
        "run",
        "health-check"
      ],
      "interval": "30s",
      "timeout": "10s",
      "retries": 3,
      "start_period": "40s"
    }
  },
  "kubernetes": {
    "namespace": "forensic-system",
    "labels": {
      "app": "evidence-service",
      "version": "1.0.0",
      "component": "microservice"
    },
    "resources": {
      "requests": {
        "memory": "256Mi",
        "cpu": "250m"
      },
      "limits": {
        "memory": "512Mi",
        "cpu": "500m"
      }
    },
    "replicas": 2,
    "strategy": "RollingUpdate"
  }
}
